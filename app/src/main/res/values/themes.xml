<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">#25B8B8B8</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/basic_color</item>
        <item name="colorAccent">@color/basic_color</item>
        <item name="colorSurface">#0B0B0B</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/bg_white</item>
        <item name="themePrimaryButton">@style/ButtonPrimary</item>
        <item name="themeRegularFont">@style/FontRegular</item>
        <item name="themeRegularBoldFont">@style/FontRegularBold</item>
        <item name="themeRegularClickableFont">@style/FontRegularClickable</item>
        <item name="themeRegularClickableBoldFont">@style/FontRegularClickableBold</item>
        <item name="themeRegularNegativeFont">@style/FontRegularNegative</item>
        <item name="themeSmallFont">@style/FontSmall</item>
        <item name="themeSmallClickableFont">@style/FontSmallClickable</item>
        <item name="themeSmallNegativeFont">@style/FontSmallNegative</item>
        <item name="themeBigFont">@style/FontBig</item>
        <item name="themeBigBoldFont">@style/FontBigBold</item>
        <!--        <item name="themePrimaryBorderButton">@style/ButtonPrimaryBorder</item>-->
        <!--        <item name="themeNegativeBorderButton">@style/ButtonNegativeBorder</item>-->
        <item name="colorOnPrimary">@color/bg_white</item>
        <item name="colorSecondary">@color/violet_400</item>
        <item name="colorSecondaryVariant">@color/violet_700</item>
        <item name="colorOnSecondary">@color/bg_black</item>
        <item name="colorSecondaryContainer">@color/violet_400</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondary</item>
        <item name="colorOnSurfaceVariant">@color/nav_tab</item>
        <item name="windowActionBar">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="snackbarStyle">@style/MySnackbar</item>
        <item name="snackbarButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Snackbar
        </item>
        <item name="snackbarTextViewStyle">@string/MySnackBarText</item>
        <item name="popupMenuStyle">@style/MyPopup</item>
        <!--        <item name="fgl_scrim_color">#000000</item>-->
        <!--        <item name="fgl_scrim_amount">0.15</item>-->
        <!--        <item name="fgl_parallax_factor">1.3</item>-->
        <!--        <item name="fgl_anim_duration">500</item>-->
        <!--        <item name="fgl_elevation">3dp</item>-->

    </style>

    <style name="Theme.AnimeApp" parent="Theme.Base">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


    </style>


    <style name="Theme.AnimeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnimeApp.toolbar">
        <!--        <item name="textSize">22dp</item>-->
        <!--        <item name="textSize">22dp</item>-->
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.AnimeApp.AppBarOverlay" parent="Theme.AnimeApp" />

    <style name="Theme.AnimeApp.PopupOverlay" parent="Theme.AnimeApp" />

    <style name="Theme.AnimeApp.NeverCutout" parent="@style/Theme.Base">

        <item name="android:navigationBarColor">@color/bg</item>

    </style>

    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AnimeApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/status</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/shape_corner_16dp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="titleEnabled">true</item>
        <!--        <item name="iconTintActive">@color/basic_color</item>-->
        <!--        <item name="iconTintActive">@color/basic_color</item>-->
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#000000</item>
    </style>

    <style name="Theme.AnimeApp.Fullscreen" parent="Theme.AnimeApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.AnimeApp.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.AnimeApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.AnimeApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.AnimeApp.AppWidgetContainer" parent="Theme.AnimeApp.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>
